<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Primary Colors -->
    <Color x:Key="PrimaryBlue">#0078D4</Color>
    <Color x:Key="PrimaryBlueDark">#005A9E</Color>
    <Color x:Key="PrimaryBlueLight">#4DA3FF</Color>
    
    <!-- Status Colors -->
    <Color x:Key="SuccessGreen">#107C10</Color>
    <Color x:Key="WarningOrange">#FF8C00</Color>
    <Color x:Key="ErrorRed">#E81123</Color>
    
    <!-- Background Colors -->
    <Color x:Key="BackgroundLight">#F3F3F3</Color>
    <Color x:Key="BackgroundWhite">#FFFFFF</Color>
    <Color x:Key="BackgroundGray">#E5E5E5</Color>
    
    <!-- Text Colors -->
    <Color x:Key="TextDark">#1F1F1F</Color>
    <Color x:Key="TextGray">#605E5C</Color>
    <Color x:Key="TextLight">#8A8886</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}" />
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="{StaticResource SuccessGreen}" />
    <SolidColorBrush x:Key="WarningOrangeBrush" Color="{StaticResource WarningOrange}" />
    <SolidColorBrush x:Key="ErrorRedBrush" Color="{StaticResource ErrorRed}" />
    <SolidColorBrush x:Key="BackgroundLightBrush" Color="{StaticResource BackgroundLight}" />
    <SolidColorBrush x:Key="TextDarkBrush" Color="{StaticResource TextDark}" />
    
</ResourceDictionary>
