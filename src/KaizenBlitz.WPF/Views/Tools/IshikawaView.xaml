<Page x:Class="KaizenBlitz.WPF.Views.Tools.IshikawaView"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="Ishikawa Diagram">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Grid Grid.Row="0" Margin="0,0,0,24">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <TextBlock Grid.Column="0" Text="Ishikawa (Fishbone) Diagram" FontSize="24" FontWeight="Bold"/>
            
            <StackPanel Grid.Column="1" Orientation="Horizontal">
                <Button Content="SAVE" Command="{Binding SaveCommand}" Margin="0,0,8,0"/>
                <Button Content="EXPORT PDF" Command="{Binding ExportPdfCommand}" Margin="0,0,8,0"/>
                <Button Content="MARK COMPLETE" Command="{Binding MarkCompleteCommand}"/>
            </StackPanel>
        </Grid>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <TextBox Text="{Binding ProblemStatement}"
                        materialDesign:HintAssist.Hint="Problem Statement*"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        AcceptsReturn="True"
                        MinLines="2"/>

                <TextBlock Text="Categories (6M's)" FontSize="18" FontWeight="Bold" Margin="0,16,0,8"/>

                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="White" 
                                   BorderBrush="#E5E5E5" 
                                   BorderThickness="1" 
                                   CornerRadius="4" 
                                   Padding="16" 
                                   Margin="0,0,0,16">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" FontSize="16" FontWeight="Bold" Margin="0,0,0,8"/>
                                    
                                    <ItemsControl ItemsSource="{Binding Causes}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Text="{Binding, StringFormat='â€¢ {0}'}" Margin="0,4"/>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                    </ItemsControl>

                                    <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                        <TextBox x:Name="NewCauseTextBox" Width="300" Margin="0,0,8,0"/>
                                        <Button Content="Add Cause" Width="100"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>

                <CheckBox IsChecked="{Binding IsCompleted}" Content="Diagram Completed"/>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</Page>
