<Window x:Class="KaizenBlitz.WPF.Views.Wizard.ProjectWizardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="New Project Wizard" Height="600" Width="800"
        WindowStartupLocation="CenterScreen">
    
    <Grid Margin="32">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0" 
                  Text="Create New Kaizen Blitz Project" 
                  FontSize="24" 
                  FontWeight="Bold"
                  Margin="0,0,0,24"/>

        <!-- Form Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
            <StackPanel Spacing="16">
                <TextBox Text="{Binding Name}"
                        materialDesign:HintAssist.Hint="Project Name*"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <TextBox Text="{Binding Description}"
                        materialDesign:HintAssist.Hint="Description"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        AcceptsReturn="True"
                        MinLines="3"
                        MaxLines="5"/>

                <TextBox Text="{Binding TargetArea}"
                        materialDesign:HintAssist.Hint="Target Area"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"/>

                <DatePicker SelectedDate="{Binding StartDate}"
                           materialDesign:HintAssist.Hint="Start Date"
                           Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                <DatePicker SelectedDate="{Binding ExpectedCompletionDate}"
                           materialDesign:HintAssist.Hint="Expected Completion Date"
                           Style="{StaticResource MaterialDesignOutlinedDatePicker}"/>

                <TextBox Text="{Binding TeamMembers}"
                        materialDesign:HintAssist.Hint="Team Members (comma-separated)"
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        AcceptsReturn="True"
                        MinLines="3"/>
            </StackPanel>
        </ScrollViewer>

        <!-- Action Buttons -->
        <StackPanel Grid.Row="2" 
                   Orientation="Horizontal" 
                   HorizontalAlignment="Right"
                   Margin="0,24,0,0">
            <Button Content="CANCEL" 
                   Style="{StaticResource SecondaryButton}"
                   Command="{Binding CancelCommand}"
                   Margin="0,0,16,0"
                   Width="120"/>
            <Button Content="CREATE" 
                   Style="{StaticResource PrimaryButton}"
                   Command="{Binding SaveCommand}"
                   Width="120"/>
        </StackPanel>
    </Grid>
</Window>
