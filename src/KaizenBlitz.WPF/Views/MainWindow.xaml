<Window x:Class="KaizenBlitz.WPF.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="clr-namespace:KaizenBlitz.WPF.ViewModels"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        Title="Kaizen Blitz Application"
        Width="1200" Height="800"
        WindowStartupLocation="CenterScreen">

    <Window.DataContext>
        <vm:MainWindowViewModel/>
    </Window.DataContext>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0">
            <MenuItem Header="_File">
                <MenuItem Header="_New Project" Command="{Binding NewProjectCommand}"/>
                <Separator/>
                <MenuItem Header="_Exit" Command="{Binding ExitCommand}"/>
            </MenuItem>
            <MenuItem Header="_Edit">
                <MenuItem Header="Preferences"/>
            </MenuItem>
            <MenuItem Header="_View">
                <MenuItem Header="Dashboard" Command="{Binding NavigateToDashboardCommand}"/>
            </MenuItem>
            <MenuItem Header="_Tools">
                <MenuItem Header="Five Whys"/>
                <MenuItem Header="Ishikawa Diagram"/>
                <MenuItem Header="Action Plan"/>
                <MenuItem Header="Pareto Chart"/>
            </MenuItem>
            <MenuItem Header="_Help">
                <MenuItem Header="User Guide"/>
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>

        <!-- Main Content Area -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Sidebar Navigation -->
            <Border Grid.Column="0" BorderBrush="#E5E5E5" BorderThickness="0,0,1,0">
                <StackPanel Margin="16">
                    <TextBlock Text="Navigation" FontSize="16" FontWeight="Bold" Margin="0,0,0,16"/>
                    
                    <Button Content="Dashboard" 
                            HorizontalAlignment="Stretch"
                            Margin="0,4"
                            Command="{Binding NavigateToDashboardCommand}"/>
                    
                    <Expander Header="Kaizen Phases" IsExpanded="True" Margin="0,8,0,0">
                        <StackPanel Margin="16,8,0,0">
                            <TextBlock Text="• Preparation" Margin="0,4"/>
                            <TextBlock Text="• Analysis" Margin="0,4"/>
                            <TextBlock Text="• Improvement" Margin="0,4"/>
                            <TextBlock Text="• Implementation" Margin="0,4"/>
                            <TextBlock Text="• Review" Margin="0,4"/>
                        </StackPanel>
                    </Expander>
                    
                    <Expander Header="Tools" IsExpanded="False" Margin="0,8,0,0">
                        <StackPanel Margin="16,8,0,0">
                            <TextBlock Text="• Five Whys" Margin="0,4"/>
                            <TextBlock Text="• Ishikawa Diagram" Margin="0,4"/>
                            <TextBlock Text="• Action Plan" Margin="0,4"/>
                            <TextBlock Text="• Pareto Chart" Margin="0,4"/>
                        </StackPanel>
                    </Expander>
                </StackPanel>
            </Border>

            <!-- Content Area -->
            <ScrollViewer Grid.Column="1">
                <ContentControl Content="{Binding CurrentView}"/>
            </ScrollViewer>
        </Grid>

        <!-- Status Bar -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="8,4">
            <TextBlock Text="Ready" Margin="0,0,16,0"/>
            <Separator/>
            <TextBlock x:Name="StatusText" Text="" Margin="16,0,0,0"/>
        </StackPanel>
    </Grid>
</Window>
